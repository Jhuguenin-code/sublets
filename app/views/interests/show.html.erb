<div>
  <div>
    <h1>
      Interest #<%= @the_interest.id %> details
    </h1>

    <div>
      <div>
        <a href="/interests">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_interest/<%= @the_interest.id %>">
          Delete interest
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Listing
      </dt>
      <dd>
        <%= @the_interest.listing_id %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_interest.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_interest.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_interest.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit interest
    </h2>

    <form action="/modify_interest/<%= @the_interest.id %>"  method="post" >
      <div>
        <label for="listing_id_box">
          Listing
        </label>

        <input type="text" id="listing_id_box" name="query_listing_id" value="<%= @the_interest.listing_id %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_interest.user_id %>">
      </div>

      <button>
        Update interest
      </button>
    </form>
  </div>
</div>

<hr>
